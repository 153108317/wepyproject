          <view class='bottom-left'>
            <text class='bottom-price'>¥{{item.goodsEvalScore}}</text>
            <text class='price-intro'>惠金币抵扣价</text>
          </view>
          <view class='bottom-btn-pay'>立即购买</view>
        </view>
      </view>
    </repeat>
  </view>
