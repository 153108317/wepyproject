<script>
  import wepy from 'wepy'

  export default class Product extends wepy.component {
    data = {
      list: [],
      currentPage: Number,
      tabId: -99999,
      hasMore: true,
      newList: []
    }
    methods = {
      click(goodsId) {
        console.log('click')
        wepy.navigateTo({
          url: `./productDetail?goodsId=${goodsId}`
        })
      }
    }

    getProduct(id) {
      if (!this.hasMore) {
        return
      }
      this.currentPage++
      var url = `https://api.pinduoduo.com/api/targaryen/query_goods_list_by_opt_id?optId=${id}&pageNum=${this.currentPage}&pageSize=20&sortType=1`
      var that = this
      console.log(url)
      wepy.request(url).then((respone) => {
        this.newList =
         respone.data.result.goodsList
        if (this.newList.length < 1) {
          this.hasMore = false
          return
        }
        for (var item in this.newList) {
          console.log(item)
        }
        if (this.currentPage === 1) {
          that.list = this.newList
        } else {
          that.list = [...this.list, ...this.newList]
        }

        that.$apply()
        console.log(that.list)
      })
    }

    onLoad() {
      this.currentPage = 0
      this.getProduct(this.tabId)
    }

    events = {
      product: (p) => {
        console.log(p)
      }
    }

    product1(p, id) {
      console.log(p)
      if (p === 0) {
        this.currentPage = p
      }
      this.tabId = id
      this.getProduct(this.tabId)
    }
  }

</script>
